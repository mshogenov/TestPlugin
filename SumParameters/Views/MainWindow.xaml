<Window x:Class="SumParameters.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SumParameters.Views"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:SumParameters.ViewModels"
        d:DataContext="{d:DesignInstance vm:MainWindowVM}"
        Title="Сумма параметров" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="Получить"
                    Command="{Binding GetCommand}" />
            <TextBlock Text="Округлять результат до " />
            <Border BorderThickness="2"
                    BorderBrush="Gray" Padding="5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding ValueRounding}" Margin="5 0" />
                    <Button Content="+" Padding="3"
                            Command="{Binding UpValueRoundingCommand}"
                            Margin="5 0" />
                    <Button Content="-" Padding="3"
                            Command="{Binding DownValueRoundingCommand}" />
                </StackPanel>
            </Border>
            <TextBlock Margin="5 0" Text="знаков." />
            <TextBlock Text="Коэффициент" />
            <ComboBox ItemsSource="{Binding Ratios}"
                      SelectedItem="{Binding SelectedRatio}" />
        </StackPanel>
        <DataGrid Grid.Row="1"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  ItemsSource="{Binding SumParameterItems }"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя параметра"
                                    Binding="{Binding ParameterName}"
                                    IsReadOnly="True" />
                <DataGridTemplateColumn Header="Значение" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="{Binding ParameterValueDisplay}"
                                           VerticalAlignment="Center"
                                           Margin="5,0" />

                                <Button Grid.Column="1"
                                        x:Name="CopyButton"
                                        Content="📋"
                                        ToolTip="Копировать"
                                        Width="20"
                                        Height="20"
                                        Margin="2"
                                        Visibility="Hidden"
                                        Command="{Binding DataContext.CopyCommand, 
                                  RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding ParameterValueDisplay}" />
                            </Grid>
                            <DataTemplate.Triggers>
                                <DataTrigger
                                    Binding="{Binding IsMouseOver, 
                             RelativeSource={RelativeSource AncestorType=DataGridRow}}"
                                    Value="True">
                                    <Setter TargetName="CopyButton" Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Ед.изм."
                                    Binding="{Binding Path=ToUnitLabel}"
                                    IsReadOnly="True" />
                <DataGridTemplateColumn Header="С коэффициентом">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="{Binding ParameterValueCoefficient}"
                                           VerticalAlignment="Center"
                                           Margin="5,0" />

                                <Button Grid.Column="1"
                                        x:Name="CopyButton"
                                        Content="📋"
                                        ToolTip="Копировать"
                                        Width="20"
                                        Height="20"
                                        Margin="2"
                                        Visibility="Hidden"
                                        Command="{Binding DataContext.CopyCommand, 
                                  RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding ParameterValueCoefficient}" />
                            </Grid>
                            <DataTemplate.Triggers>
                                <DataTrigger
                                    Binding="{Binding IsMouseOver, 
                             RelativeSource={RelativeSource AncestorType=DataGridRow}}"
                                    Value="True">
                                    <Setter TargetName="CopyButton" Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>